<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.divya.customlistview.MainActivity">

    <ListView
        android:id="@+id/parentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:id="@+id/renameF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/customborder">

        <EditText
            android:id="@+id/renameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:selectAllOnFocus="true"
            android:text="XYZ"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="rename"
            android:text="RENAME"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/options"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="@drawable/customborder"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="copyFile"
            app:srcCompat="@drawable/copy" />

        <ImageView
            android:id="@+id/move"
            android:onClick="moveFile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/move" />


        <ImageView
            android:id="@+id/delete"
            android:onClick="deleteFile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/delete" />

        <ImageView
            android:id="@+id/rename"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="openRenameDialogBox"
            android:src="@drawable/rename" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/deleteConfirm"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="@drawable/customborder"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/check"
            android:onClick="confirmDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/check" />

        <ImageView
            android:id="@+id/cancel"
            android:onClick="cancelDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/cancel" />

    </LinearLayout>

</RelativeLayout>
